{
  "compilerOptions": {
    "outDir": "./dst",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowUnusedLabels": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es6", "es2016", "dom", "esnext.asynciterable"],
    "removeComments": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
